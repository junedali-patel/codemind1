{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ]
    }
  },
  //"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../refrence code/contexts/AIAssistantPanel.tsx", "../refrence code/contexts/ChatInterface.tsx", "../refrence code/contexts/CodeAnalysis.tsx", "../refrence code/contexts/CodeEditorPanel.tsx", "../refrence code/contexts/FileTreePanel.tsx", "../refrence code/contexts/FlowchartView.tsx", "../refrence code/contexts/MindMapView.tsx", "../refrence code/contexts/Toolbar.tsx"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
